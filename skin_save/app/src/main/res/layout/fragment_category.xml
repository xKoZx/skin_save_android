<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORIES"
        android:fontFamily="serif"
        android:textSize="25dp"
        android:padding="8dp"
        android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wide range of SkinCare products"
            android:textColor="@color/mainpink"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textSize="15dp"
            android:padding="8dp"
            android:layout_marginLeft="30dp"/>



        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopby"
        android:text="Shop by skin type"
        android:fontFamily="serif-monospace"
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="35dp"/>


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCategory"
        android:layout_marginTop="140dp"
        android:columnCount="3"
        android:padding="20dp"
        android:rowCount="2">

        <!-- Category 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="115dp"
                    android:layout_height="132dp"
                    android:src="@drawable/normal"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Normal Skin"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!-- Category 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/category2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="115dp"
                    android:layout_height="132dp"
                    android:src="@drawable/dry" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Dry Skin"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="25dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Category 3 -->

        <androidx.cardview.widget.CardView
            android:id="@+id/category3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="115dp"
                    android:layout_height="132dp"
                    android:src="@drawable/oil" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Oily Skin"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="20dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!-- Repeat the above CardView for "dry skin" and "oily skin" -->
        <!-- Remember to give them unique IDs -->

    </GridLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/concern"
        android:text="Shop by concern"
        android:fontFamily="serif-monospace"
        android:textSize="20dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="35dp"/>


        <GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCategory"
            android:layout_marginTop="360dp"
            android:columnCount="3"
            android:padding="20dp"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/category4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="115dp"
                        android:layout_height="132dp"
                        android:src="@drawable/acne" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Acne Skin" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="115dp"
                        android:layout_height="132dp"
                        android:src="@drawable/aging" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Aging" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </GridLayout>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/products"
        android:text="Shop all products"
        android:fontFamily="serif-monospace"
        android:textSize="20dp"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="35dp"/>



    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCategory"
        android:layout_marginTop="600dp"
        android:columnCount="3"
        android:padding="20dp"
        android:rowCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/category7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="115dp"
                    android:layout_height="132dp"
                    android:src="@drawable/srum"/>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Serum"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/category8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="115dp"
                    android:layout_height="132dp"
                    android:src="@drawable/cleanoil"/>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Cleanser"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/category9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="115dp"
                    android:layout_height="132dp"
                    android:src="@drawable/sunscreen"/>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Sunscreen"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/category10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="115dp"
                    android:layout_height="132dp"
                    android:src="@drawable/moist3"/>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Moisturizer"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/category11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="115dp"
                    android:layout_height="132dp"
                    android:src="@drawable/bodycare"/>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Bodycare"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/category12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="115dp"
                    android:layout_height="132dp"
                    android:src="@drawable/eyecream"/>

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Eyecare"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>
        </FrameLayout>
    </ScrollView>
</RelativeLayout>
