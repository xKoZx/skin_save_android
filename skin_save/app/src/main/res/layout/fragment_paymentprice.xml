<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPaidOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="8dp"
            android:text="Paid Orders" />

        <TextView
            android:id="@+id/textViewTotalRevenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="16dp"
            android:textStyle="bold"
            android:background="#EEEEEE"
            android:layout_marginBottom="8dp"
            android:text="Total Revenue" />

        <TextView
            android:id="@+id/textViewNotPaidOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="8dp"
            android:text="Not Paid Orders" />

        <TextView
            android:id="@+id/textViewYetToPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="16dp"
            android:textStyle="bold"
            android:background="#EEEEEE"
            android:layout_marginBottom="8dp"
            android:text="Yet to Pay" />

    </LinearLayout>
</ScrollView>
