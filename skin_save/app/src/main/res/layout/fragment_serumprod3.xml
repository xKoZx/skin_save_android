<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".serumprod3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="76dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/splash" />


    <ImageView
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/minimalist" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="570dp"
        android:fontFamily="serif"
        android:text="Minimalist 10% Niacinamide Face Serum -(30ml)"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="630dp"
        android:fontFamily="sans-serif-black"
        android:text="â‚¹ 560.00"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="650dp"
        android:fontFamily="serif"
        android:text="(MRP is Inclusive of All Taxes)"
        android:textSize="10dp" />

    <Button
        android:id="@+id/addsr3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="700dp"
        android:backgroundTint="#8EA193"
        android:drawableTint="#576A5C"
        android:text="ADD TO CART"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="800dp"
        android:fontFamily="sans-serif-black"
        android:text="KEY BENEFITS:"
        android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="890dp"
        android:fontFamily="serif"
        android:text="-Unique blend of highly effective ingredients - Niacinamide, Matmarine, Zinc and Acetyl Glucosamine"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="940dp"
        android:fontFamily="serif"
        android:text="-Pure 10% Niacinamide is clinically proven to promote protein synthesis, reduce melanin concentration and improve skin complexion in 2 weeks"
        android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1000dp"
            android:fontFamily="serif"
            android:text="-Matmarine is one of the biotechnological extract derive from a marine microorganism, helps regulate oiliness regardless of skin type and reduces sebum and appearance of pores, support hydration"
            android:textSize="15dp" />


        <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1080dp"
        android:background="@color/black" />
    </FrameLayout>
    </ScrollView>
</RelativeLayout>